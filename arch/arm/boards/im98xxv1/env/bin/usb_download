#!/bin/sh

. /env/config

if [ x$1 = xnet ]; then
	if [ -z $2 ]; then
		exit 1
	fi
	tftp $2 ramloader || exit 1
	cp ramloader /dev/ram1
	go 0x1FFE0000
fi

if [ x$1 = xnand ]; then
	if [ -e /dev/ramloader0 ]; then
		cp /dev/ramloader0 /dev/ram1
		download_signature
		go 0x1FFE0000
	else
		echo "Can not find ramloader"
	fi
fi
